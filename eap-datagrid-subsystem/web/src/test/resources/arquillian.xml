<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <extension qualifier="webdriver">
        <property name="browser">${browser}</property>
    </extension>

    <container qualifier="jbossas-managed" default="true">
        <configuration>
            <property name="jbossHome">${eapHome}</property>
            <property name="allowConnectingToRunningServer">true</property>
        </configuration>
    </container>

    <group qualifier="jbossas-cluster">
        <container qualifier="clustered-jbossas-managed-1">
            <configuration>
                <property name="jbossHome">${eapHome1}</property>
                <!--<property name="allowConnectingToRunningServer">true</property>-->
                <!--<property name="managementAddress">127.0.0.1</property>-->
            </configuration>
        </container>
        <container qualifier="clustered-jbossas-managed-2">
            <configuration>
                <property name="jbossHome">${eapHome2}</property>
                <property name="javaVmArguments">-Djboss.socket.binding.port-offset=100 -Djboss.management.native.port=9990</property>
                <property name="managementPort">10090</property>
                <!--<property name="allowConnectingToRunningServer">true</property>-->
            </configuration>
        </container>
    </group>

</arquillian>