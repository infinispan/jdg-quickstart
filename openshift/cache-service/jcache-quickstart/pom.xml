<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.jboss.quickstarts.jdg</groupId>
    <artifactId>openshift-cache-service-jcache</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>Using JCache API with Cache Service: Red Hat Data Grid for OpenShift</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>

        <shade-maven-plugin.version>3.1.0</shade-maven-plugin.version>

        <shade-maven-plugin.main.class>org.infinispan.quickstart.openshift.cache.jcache.CreateCache</shade-maven-plugin.main.class>

        <version.org.infinispan>9.4.13.Final-redhat-00002</version.org.infinispan>
    </properties>

    <dependencies>
        <dependency>
          <groupId>org.infinispan</groupId>
          <artifactId>infinispan-remote</artifactId>
          <version>9.4.13.Final-redhat-00002</version>
        </dependency>
        <dependency>
          <groupId>javax.cache</groupId>
          <artifactId>cache-api</artifactId>
          <version>1.0.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>${shade-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>${shade-maven-plugin.main.class}</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                <execution>
                    <id>build-classpath</id>
                    <phase>generate-resources</phase>
                    <goals>
                        <goal>build-classpath</goal>
                    </goals>
                    <configuration>
                        <outputFile>${project.build.directory}/lib/classpath</outputFile>
                        <localRepoProperty>lib</localRepoProperty>
                    </configuration>
                </execution>
            </executions>
          </plugin>
        </plugins>
    </build>

</project>
