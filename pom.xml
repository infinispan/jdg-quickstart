<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <groupId>com.jboss.datagrid.quickstart</groupId>
   <artifactId>jdg-quickstarts</artifactId>
   <version>1.0.0-SNAPSHOT</version>
   <packaging>pom</packaging>
   <name>JBoss Data Grid Quickstart Parent</name>

   <profiles>
      <profile>
         <id>server</id>
         <activation>
            <activeByDefault>false</activeByDefault>
         </activation>
         <modules>
            <module>hotrod-endpoint</module>
            <module>rest-endpoint</module>
            <module>memcached-endpoint</module>
         </modules>
      </profile>
      
      <profile>
         <id>library</id>
         <activation>
            <activeByDefault>false</activeByDefault>
         </activation>
         <modules>
            <module>carmart</module>
            <module>carmart-transactional</module>
         </modules>
      </profile>
      
      <profile>
         <id>distribution</id>
         <activation>
            <activeByDefault>false</activeByDefault>
         </activation>
         <build>
            <plugins>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-assembly-plugin</artifactId>
                  <version>2.3</version>
                  <executions>
                     <execution>
                        <id>assemble</id>
                        <phase>package</phase>
                        <goals>
                           <goal>single</goal>
                        </goals>
                     </execution>
                  </executions>
                  <configuration>
                     <descriptors>
                        <descriptor>src/main/assemblies/sources.xml</descriptor>
                     </descriptors>
                  </configuration>
               </plugin>
           </plugins>
        </build>
      </profile>
   </profiles>
</project>

